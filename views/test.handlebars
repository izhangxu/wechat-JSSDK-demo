<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width"/>
    <title>测试</title>
    <script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
    <script type="text/javascript" src="http://cdn.bootcss.com/zepto/1.2.0/zepto.min.js"></script>
    <script type="text/javascript">
        $.ajax({
            url: '/sign/0',
            type: 'POST',
            dataType: 'json',
            data: {
                url: location.href.split('#')[0]
            },
            success: function(json) {
                config(json);
            }
        });
        wx.ready(function() {
            var oBtn = document.getElementById('btn1');
            oBtn.onclick = function() {
                wx.chooseImage({
                    count: 1, // 默认9
                    sizeType: ['original', 'compressed'], // 可以指定是原图还是压缩图，默认二者都有
                    sourceType: ['album', 'camera'], // 可以指定来源是相册还是相机，默认二者都有
                    success: function(res) {
                        var localIds = res.localIds; // 返回选定照片的本地ID列表，localId可以作为img标签的src属性显示图片
                        alert(localIds);
                    }
                });
            };

            //关闭右上角菜单
            var oBtn2 = document.getElementById('btn2');
            oBtn2.onclick = function() {
                wx.hideOptionMenu();
            };

            //关闭右上角菜单
            var oBtn3 = document.getElementById('btn3');
            oBtn3.onclick = function() {
                wx.showOptionMenu();
            };

            // 扫码二维码
            var scanQR = document.getElementById('btn4');
            scanQR.onclick = function() {
                wx.scanQRCode({
                    needResult: 1, // 默认为0，扫描结果由微信处理，1则直接返回扫描结果，
                    scanType: ["qrCode", "barCode"], // 可以指定扫二维码还是一维码，默认二者都有
                    success: function(res) {
                        var result = res.resultStr; // 当needResult 为 1 时，扫码返回的结果
                    }
                });
            };
        });

        wx.error(function(err) {
            alert('发生错误了');
            console.log(err);
        });

        function config(data) {
            wx.config({
                debug: true,
                appId: data.appid,
                timestamp: data.timestamp,
                nonceStr: data.nonceStr,
                signature: data.signature,
                jsApiList: [
                    'chooseImage',
                    'hideOptionMenu',
                    'showOptionMenu',
                    'scanQRCode'
                ]
            });
        }
    </script>
</head>
<body>
    
    <input type="button" value="拍照" id="btn1"/>
    <input type="button" value="隐藏右上角菜单" id="btn2"/>
    <input type="button" value="显示右上角菜单" id="btn3"/>
    <input type="button" value="二维码" id="btn4"/>
</body>
</html>